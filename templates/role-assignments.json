{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountPrincipalId": {
            "type": "string",
            "metadata": {
                "description": "Principal ID of the Automation Account managed identity"
            }
        },
        "storageAccountNames": {
            "type": "array",
            "metadata": {
                "description": "Array of storage account names to grant access to"
            }
        },
        "storageAccountResourceGroups": {
            "type": "array",
            "metadata": {
                "description": "Array of resource group names for storage accounts"
            }
        }
    },
    "variables": {
        "storageBlobDataContributorRoleId": "ba92f5b4-2d11-453d-a403-e96b0029c9fe",
        "storageFileDataSmbShareContributorRoleId": "0c867c2a-1d8c-454a-a3db-ab2ea1bdc8bb",
        "readerRoleId": "acdd72a7-3385-48ef-bd42-f606fba81ae7"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2022-04-01",
            "name": "[guid(subscription().subscriptionId, parameters('automationAccountPrincipalId'), variables('storageBlobDataContributorRoleId'), parameters('storageAccountNames')[copyIndex()])]",
            "copy": {
                "name": "blobRoleAssignmentsCopy",
                "count": "[length(parameters('storageAccountNames'))]"
            },
            "scope": "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountNames')[copyIndex()])]",
            "properties": {
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('storageBlobDataContributorRoleId'))]",
                "principalId": "[parameters('automationAccountPrincipalId')]",
                "principalType": "ServicePrincipal"
            }
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2022-04-01",
            "name": "[guid(subscription().subscriptionId, parameters('automationAccountPrincipalId'), variables('storageFileDataSmbShareContributorRoleId'), parameters('storageAccountNames')[copyIndex()])]",
            "copy": {
                "name": "fileRoleAssignmentsCopy",
                "count": "[length(parameters('storageAccountNames'))]"
            },
            "scope": "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountNames')[copyIndex()])]",
            "properties": {
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('storageFileDataSmbShareContributorRoleId'))]",
                "principalId": "[parameters('automationAccountPrincipalId')]",
                "principalType": "ServicePrincipal"
            }
        }
    ],
    "outputs": {
        "roleAssignmentsCreated": {
            "type": "int",
            "value": "[mul(length(parameters('storageAccountNames')), 2)]"
        }
    }
}
